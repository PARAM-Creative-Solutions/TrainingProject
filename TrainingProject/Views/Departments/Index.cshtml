@model IEnumerable<TrainingProjectDataLayer.DataLayer.Entities.DAL.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- #region HTML CODE -->
<p><br /><br /><br /></p>
<div class="">
