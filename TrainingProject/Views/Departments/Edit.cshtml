@model TrainingProjectDataLayer.DataLayer.Entities.DAL.Department

@{
    Layout = null;
}
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { id = "frmEditDepartment" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DeptId)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.LastModifiedBy)
    @Html.HiddenFor(model => model.LastModifiedOn)
    <div class="form-horizontal form-group has-feedback">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlantId)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control has-feedback-left" } })
                <span class="fa fa-th form-control-feedback left" aria-hidden="true"></span>
                 @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control has-feedback-left" } })
                <span class="fa fa-th form-control-feedback left" aria-hidden="true"></span>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsHead, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.CheckBoxFor(m => m.IsHead, htmlAttributes: new { @class = "flat" })
                @Html.ValidationMessageFor(model => model.IsHead, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<script src="~/Libs/Gentelella/js/icheck.min.js"></script>
<script>
    $(document).ready(function () {
        $('input.flat').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green'
        });
    });

</script>



