@model TrainingProjectDataLayer.DataLayer.Entities.DAL.User

@{
    Layout = null;
}

<table class="table table-striped table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.UserName) </th>
        <td>@Html.DisplayFor(model => model.UserName) </td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Password)</th>
        <td>@Html.DisplayFor(model => model.Password)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
        <td>@Html.DisplayFor(model => model.FirstName)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.MiddleName)</th>
        <td>@Html.DisplayFor(model => model.MiddleName)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.LastName)</th>
        <td>@Html.DisplayFor(model => model.LastName)</td>
    </tr>
    @*<tr>
        <th>@Html.DisplayNameFor(model => model.SAPSystemName)</th>
        <td>@Html.DisplayFor(model => model.SAPSystemName)</td>
    </tr>*@
    <tr>
        <th>@Html.DisplayNameFor(model => model.Init)</th>
        <td>@Html.DisplayFor(model => model.Init)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.EmailId)</th>
        <td>@Html.DisplayFor(model => model.EmailId)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Department.Name)</th>
        <td>@Html.DisplayFor(model => model.Department.Name)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.UserRoles)</th>
        <td class="col-md-7 col-sm-7 col-xs-12">
            @Html.ListBoxFor(model => model.SelectedRoles, (MultiSelectList)ViewBag.AllRoles, new { @multiple = "multiple", @size = (((MultiSelectList)ViewBag.AllRoles).Count() + 1) })
        </td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
        <td>@Html.DisplayFor(model => model.CreatedOn)</td>
    </tr>


    <tr>
        <th>@Html.DisplayNameFor(model => model.Photo)</th>
        @if (Model.Photo != null)
        {
            string imgPath = Path.Combine(Model.UploadedFile.FilePath, Model.Photo.ToString(), Model.UploadedFile.FileName);
            byte[] byteData = System.IO.File.ReadAllBytes(imgPath);
            string imreBase64Data = Convert.ToBase64String(byteData);
            string imgDataURL = string.Format("data:image/jpg;base64,{0}", imreBase64Data);
            <td><img src="@imgDataURL" alt="@Model.UploadedFile.FileName" width="100" height="100" style="border-radius:50%" /></td>
        }
        else
        {
            <td><img src="~/Images/img.jpg" width="100" height="100" style="border-radius:50%" /></td>
        }
    </tr>
   

</table>
<link href="~/Content/css/select2.min.css" rel="stylesheet" />
<script src="~/Scripts/select2.min.js"></script>
<script type="text/javascript">

    $('#SelectedRoles').css('width', '100%').select2({
        "disabled": true
    });

</script>

