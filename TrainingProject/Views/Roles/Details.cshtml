@model TrainingProjectDataLayer.DataLayer.Entities.DAL.Role
@{
    Layout = null;
}

<table class="table table-striped table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.RoleName) </th>
        <td>@Html.DisplayFor(model => model.RoleName) </td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.SelectedRights)</th>
        <td class="col-md-7 col-sm-7 col-xs-12">
            @Html.ListBoxFor(model => model.SelectedRights, (IEnumerable<SelectListItem>)ViewBag.AllRights, new { @multiple = "multiple", @size = (((IEnumerable<SelectListItem>)ViewBag.AllRights).Count() + 1) })
        </td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.RoleDescription)</th>
        <td>@Html.DisplayFor(model => model.RoleDescription)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
        <td>@Html.DisplayFor(model => model.CreatedBy)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
        <td>@Html.DisplayFor(model => model.CreatedOn)</td>
    </tr>
</table>

<link href="~/Content/css/select2.min.css" rel="stylesheet" />
<script src="~/Scripts/select2.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#SelectedRights').css('width', '100%').select2({
            "disabled": true
        });
    });
   
</script>
